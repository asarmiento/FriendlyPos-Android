<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:itemBackground">#d1d3d4</item>
        <item name="android:itemTextAppearance">@style/MyActionBar.MenuTextStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="ActionThemeDialog" parent="AppTheme">

    </style>

    <style name="menu_text_style" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu">
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/textinputlayout_hint_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">@color/textinputlayout_hint_color</item>
    </style>

    <style name="TextInputLayout">
        <item name="android:minHeight">65dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:gravity">bottom</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="Register_EditText" parent="Normal_EditText">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="Register_EditText1" parent="Normal_EditText">
        <item name="android:background">#d1d3d4</item>
        <item name="android:fontFamily">@font/monse</item>
    </style>

    <style name="Register_EditText2" parent="Normal_EditText">
        <item name="android:background">@color/background</item>

    </style>

    <style name="Normal_EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">35dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Small</item>
        <item name="android:textColorHint">@color/hintColor</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout.Dark" parent="TextAppearence.App.TextInputLayout">
        <item name="android:textColor">@color/hintColor</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout.Dark1" parent="TextAppearence.App.TextInputLayout">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MainButton">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ThemeLabelDark" parent="@style/AppTheme">
        <item name="android:textColorHint">@color/label_dark</item>
        <item name="android:textColorPrimary">@color/label_dark</item>
        <item name="android:textColorSecondary">@color/label_dark</item>
        <item name="colorControlNormal">@color/background</item>
        <item name="colorControlActivated">@color/background</item>
    </style>

    <style name="MyActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="MyActionBar.MenuTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#58595b</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/monse</item>
    </style>

    <style name="LoginTextField" parent="AppTheme">
        <item name="colorAccent">@color/hintColor</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="colorControlNormal">@color/hintColor</item>
        <item name="colorControlActivated">@color/hintColor</item>
        <item name="colorControlHighlight">@color/hintColor</item>
    </style>

    <style name="WhiteProgress">
        <item name="colorAccent">@android:color/white</item>
    </style>
    <style name="MenuButtonsSmallRed">
        <item name="fab_colorNormal">@color/morado</item>
        <item name="fab_colorPressed">@color/colorPrimaryDark</item>
        <item name="fab_colorRipple">@color/colorAccent</item>
    </style>

    <style name="EditTextFind">
        <item name="android:textSize">17sp</item>
        <item name="android:padding">7dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
    </style>


    <style name="ClienteNuevo1" parent="Normal_EditText">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ClienteNuevo2" parent="Normal_EditText">
        <item name="android:background">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout.ClienteNuevo" parent="TextAppearence.App.TextInputLayout">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
