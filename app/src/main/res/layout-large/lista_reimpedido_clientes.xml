<androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/cardViewDistrClientes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    card_view:cardBackgroundColor="#FFF"
    app:ignore="NamespaceTypo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/txt_cliente_factura_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Card"
            android:fontFamily="@font/monse"
            app:fontFamily="@font/monse"
            android:textColor="#58595b"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/txt_cliente_factura_fantasyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fantasy Name"
            android:fontFamily="@font/monse"
            app:fontFamily="@font/monse"
            android:textColor="#58595b"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@+id/txt_cliente_factura_card"
            />
        <TextView
            android:id="@+id/txt_cliente_factura_companyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/monse"
            app:fontFamily="@font/monse"
            android:textColor="#58595b"
            android:textSize="18sp"
            android:text="Company Name"
            android:textStyle="bold"
            android:layout_below="@+id/txt_cliente_factura_fantasyname"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/txt_cliente_factura_numeracion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/monse"
            app:fontFamily="@font/monse"
            android:textColor="#58595b"
            android:textSize="18sp"
            android:text="Numeracion"
            android:layout_below="@+id/txt_cliente_factura_companyname"
            android:layout_alignParentStart="true" />


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_print_dist"
            android:id="@+id/btnImprimirFacturaCliente"
            android:background="@null"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/btnUbicacionFacturaCliente" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_ubicacion"
            android:id="@+id/btnUbicacionFacturaCliente"
            android:background="@null"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/txtSubidaReimpPedidos"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:textSize="20sp"
            android:background="@color/colorPrimaryDark"
            android:layout_above="@+id/txt_cliente_factura_fantasyname"
            android:layout_toStartOf="@+id/btnImprimirFacturaCliente"
            android:layout_marginEnd="21dp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>