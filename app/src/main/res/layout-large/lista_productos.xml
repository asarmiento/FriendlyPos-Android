<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardViewProductos"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    card_view:cardBackgroundColor="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/txt_producto_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Nombre"
            android:textSize="20sp"
            android:textColor="@color/icons"/>

        <TextView
            android:id="@+id/txt_texto_producto_codbarras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cod. Barra:"
            android:textStyle="bold"
            android:textColor="@color/icons"
            android:textSize="20sp"
            android:layout_below="@+id/txt_producto_nombre"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/txt_producto_codbarras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cod. barras"
            android:textColor="@color/icons"
            android:textSize="20sp"
            android:layout_alignBaseline="@+id/txt_texto_producto_codbarras"
            android:layout_alignBottom="@+id/txt_texto_producto_codbarras"
            android:layout_toEndOf="@+id/txt_texto_producto_codbarras"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/txt_texto_producto_marca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marca:"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/icons"
            android:layout_below="@+id/txt_texto_producto_codbarras"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/txt_producto_marca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marca"
            android:textColor="@color/icons"
            android:textSize="20sp"
            android:layout_below="@+id/txt_producto_codbarras"
            android:layout_alignStart="@+id/txt_producto_codbarras" />

        <TextView
            android:id="@+id/txt_texto_producto_tipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/icons"
            android:layout_below="@+id/txt_texto_producto_marca"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/txt_producto_tipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo"
            android:textColor="@color/icons"
            android:layout_below="@+id/txt_producto_marca"
            android:textSize="20sp"
            android:layout_alignStart="@+id/txt_producto_marca" />

        <TextView
            android:id="@+id/txt_producto_precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Precio"
            android:textSize="20sp"
            android:gravity="right"
            android:textColor="@color/icons"
            android:layout_below="@+id/txt_producto_tipo"
            android:layout_alignParentEnd="true" />


        <TextView
            android:id="@+id/txt_texto_producto_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="En stock:"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/icons"
            android:layout_below="@+id/txt_producto_precio"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/txt_producto_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stock"
            android:textColor="@color/icons"
            android:textSize="20sp"
            android:layout_alignBaseline="@+id/txt_texto_producto_stock"
            android:layout_alignBottom="@+id/txt_texto_producto_stock"
            android:layout_toEndOf="@+id/txt_texto_producto_stock"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/txt_texto_producto_inventario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="En inventario:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/icons"
            android:layout_marginStart="35dp"
            android:layout_alignBaseline="@+id/txt_producto_stock"
            android:layout_alignBottom="@+id/txt_producto_stock"
            android:layout_toEndOf="@+id/txt_producto_stock" />
        <TextView
            android:id="@+id/txt_producto_inventario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="inventario"
            android:textSize="20sp"
            android:textColor="@color/icons"
            android:layout_marginLeft="5dp"
            android:layout_alignBaseline="@+id/txt_texto_producto_inventario"
            android:layout_alignBottom="@+id/txt_texto_producto_inventario"
            android:layout_toEndOf="@+id/txt_texto_producto_inventario" />

    </RelativeLayout>
</android.support.v7.widget.CardView>