<androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/cardViewResumenRecibosFactura"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    card_view:cardBackgroundColor="#FFF"
    app:ignore="NamespaceTypo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/txt_cliente_factura_referenciaRecibosFactura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Card"
            android:fontFamily="@font/monse"
            app:fontFamily="@font/monse"
            android:textColor="#58595b"
            android:textSize="16sp"

            />


        <TextView
            android:id="@+id/txt_resumen_numeracionRecibosFactura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14sp"
            android:fontFamily="@font/monse"
            app:fontFamily="@font/monse"
            android:textColor="#58595b"
            android:layout_marginTop="15px"
            android:text="Numeracion"
            android:layout_below="@+id/txt_cliente_factura_referenciaRecibosFactura"
            />



        <TextView
            android:id="@+id/txt_cliente_factura_fantasynameRecibosFactura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fantasy Name"
            android:fontFamily="@font/monse"
            app:fontFamily="@font/monse"
            android:textColor="#58595b"
            android:layout_marginTop="15px"
            android:textSize="12sp"
            android:layout_below="@+id/txt_resumen_numeracionRecibosFactura"
            />
        <TextView
            android:id="@+id/txt_cliente_factura_companynameRecibosFactura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company Name"
            android:fontFamily="@font/monse"
            app:fontFamily="@font/monse"
            android:textColor="#58595b"
            android:textSize="12sp"
            android:layout_marginTop="15px"
            android:layout_below="@+id/txt_cliente_factura_fantasynameRecibosFactura"
            android:layout_alignParentStart="true" />



    </RelativeLayout>
</androidx.cardview.widget.CardView>