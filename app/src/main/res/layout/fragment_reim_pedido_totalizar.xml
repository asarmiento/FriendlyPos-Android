<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/billFrame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingTop="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:layout_marginBottom="10dp"
            android:background="#d1d3d4"
            android:padding="5dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/contraseÃ±a_wrapper"
                style="@style/TextInputLayoutTotal"
                android:layout_alignParentBottom="true"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout.Dark1">

                <EditText
                    android:id="@+id/client_name"
                    style="@style/Register_EditText1"
                    android:hint="Nombre de Cliente" />

            </com.google.android.material.textfield.TextInputLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:orientation="vertical">


            <EditText
                android:id="@+id/client_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/monse"
                app:fontFamily="@font/monse"
                android:textColor="#58595b"
                android:hint="Identificacion"
                android:visibility="gone" />

            <EditText
                android:id="@+id/client_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Informacion de contacto"
                android:fontFamily="@font/monse"
                app:fontFamily="@font/monse"
                android:textColor="#58595b"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="end"
                    android:fontFamily="@font/monse"
                    app:fontFamily="@font/monse"
                    android:textColor="#58595b"
                    android:text="Subtotal gravado"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/subGrabado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/monse"
                    app:fontFamily="@font/monse"
                    android:textColor="#58595b"
                    android:layout_toEndOf="@+id/textView"
                    android:layout_toRightOf="@+id/textView"
                    android:gravity="end"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="--"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/textViewE"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/monse"
                    app:fontFamily="@font/monse"
                    android:textColor="#58595b"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="end"
                    android:text="Subtotal exento"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/subExento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/monse"
                    app:fontFamily="@font/monse"
                    android:textColor="#58595b"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/textViewE"
                    android:layout_toRightOf="@+id/textViewE"
                    android:gravity="end"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="--"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/textViewSt"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/monse"
                    app:fontFamily="@font/monse"
                    android:textColor="#58595b"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="end"
                    android:text="Subtotal"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/subTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/monse"
                    app:fontFamily="@font/monse"
                    android:textColor="#58595b"
                    android:layout_toEndOf="@+id/textViewSt"
                    android:layout_toRightOf="@+id/textViewSt"
                    android:gravity="end"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="--"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/textViewD"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/monse"
                    app:fontFamily="@font/monse"
                    android:textColor="#58595b"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="end"
                    android:text="Descuento"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/Discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:fontFamily="@font/monse"
                    app:fontFamily="@font/monse"
                    android:textColor="#58595b"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/textViewD"
                    android:layout_toRightOf="@+id/textViewD"
                    android:gravity="end"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="--"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/textViewI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="end"
                    android:fontFamily="@font/monse"
                    app:fontFamily="@font/monse"
                    android:textColor="#58595b"
                    android:text="IVA"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/IvaFact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/monse"
                    app:fontFamily="@font/monse"
                    android:textColor="#58595b"
                    android:layout_toEndOf="@+id/textViewI"
                    android:layout_toRightOf="@+id/textViewI"
                    android:gravity="end"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="--"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/textViewT"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/monse"
                    app:fontFamily="@font/monse"
                    android:textColor="#58595b"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="end"
                    android:text="@string/total"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/Total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/monse"
                    app:fontFamily="@font/monse"
                    android:textColor="#58595b"
                    android:layout_toEndOf="@+id/textViewT"
                    android:layout_toRightOf="@+id/textViewT"
                    android:gravity="end"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="--"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </RelativeLayout>





        </LinearLayout>

        <Button
            android:id="@+id/applyInvoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/monse"
            app:fontFamily="@font/monse"
            android:background="@drawable/fondo_botones"
            android:text="@string/save"
            android:textColor="@color/cardview_light_background" />

        <Button
            android:id="@+id/printInvoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/fondo_botones"
            android:fontFamily="@font/monse"
            app:fontFamily="@font/monse"
            android:text="@string/print"
            android:textColor="@color/cardview_light_background"
            android:visibility="visible" />

        <EditText
            android:id="@+id/txtNotes"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:fontFamily="@font/monse"
            app:fontFamily="@font/monse"
            android:textColor="#58595b"
            android:hint="@string/notes" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
