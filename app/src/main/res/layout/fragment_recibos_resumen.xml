<RelativeLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardViewResumenRecibos"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/background"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <TextView

            android:id="@+id/txt_resumen_factura_TotalTodosRecibos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_alignParentStart="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="10dp"
            android:text="Total de todas"
            android:textColor="@color/icons" />


        <TextView
            android:id="@+id/txt_resumen_factura_totalUnaRecibos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Total de esta factura"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingLeft="5dp"
            android:textColor="@color/icons"
            android:layout_below="@+id/txt_resumen_factura_TotalTodosRecibos"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/txtTexto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monto a Pagar:"
            android:paddingLeft="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/icons"
            android:layout_marginTop="15dp"
            android:layout_alignBaseline="@+id/txtMontoPagar"
            android:layout_alignBottom="@+id/txtMontoPagar"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/txtMontoPagar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="5dp"
            android:paddingLeft="20dp"
            android:inputType="phone"
            android:layout_below="@+id/txt_resumen_factura_totalUnaRecibos"
            android:layout_toEndOf="@+id/txtTexto" />

        <Button
            android:id="@+id/btnPagarFacturaRecibos"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorPrimary"
            android:capitalize="none"
            android:text="Pagar"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textAlignment="center"
            android:textColor="@color/cardview_light_background"
            android:layout_marginBottom="10dp"/>


    </LinearLayout>

</RelativeLayout>