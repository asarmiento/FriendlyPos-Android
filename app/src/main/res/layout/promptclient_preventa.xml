<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/promtSelectT"
        android:textSize="16sp"
        android:fontFamily="@font/monse"
        app:fontFamily="@font/monse"
        android:textColor="#58595b"
        android:text="Seleccione tipo de venta"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/promtCtext"/>


    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/promtSelectT"
        android:layout_centerHorizontal="true"
        android:id="@+id/rgTipo"
        >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Factura a Contado"
            android:fontFamily="@font/monse"
            app:fontFamily="@font/monse"
            android:textColor="#58595b"
            android:id="@+id/contadoBill"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Factura a CrÃ©dito"
            android:fontFamily="@font/monse"
            app:fontFamily="@font/monse"
            android:textColor="#58595b"
            android:id="@+id/creditBill"/>
    </RadioGroup>
</RelativeLayout>