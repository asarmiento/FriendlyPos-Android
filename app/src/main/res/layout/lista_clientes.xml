<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardViewDistrClientes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    card_view:cardBackgroundColor="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/txt_cliente_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Card"
            android:textColor="@color/icons"/>
        <TextView
            android:id="@+id/txt_cliente_fantasyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fantasy Name"
            android:textStyle="bold"
            android:textColor="@color/icons"
            android:layout_below="@+id/txt_cliente_card"
             />
        <TextView
            android:id="@+id/txt_cliente_companyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company Name"
            android:textColor="@color/icons"
            android:textStyle="bold"
            android:layout_below="@+id/txt_cliente_fantasyname"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/txt_cliente_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textColor="@color/icons"
            android:layout_below="@+id/txt_cliente_companyname"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/txt_cliente_creditlimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credit Limit"
            android:textColor="@color/icons"
            android:layout_below="@+id/txt_cliente_address"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/txt_cliente_fixeddescount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fixed descount"
            android:textColor="@color/icons"
            android:layout_alignBaseline="@+id/txt_cliente_creditlimit"
            android:layout_alignBottom="@+id/txt_cliente_creditlimit"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/txt_cliente_due"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Due"
            android:textColor="@color/icons"
            android:layout_below="@+id/txt_cliente_creditlimit"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/txt_cliente_credittime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credit time"
            android:textColor="@color/icons"
            android:layout_alignBaseline="@+id/txt_cliente_due"
            android:layout_alignBottom="@+id/txt_cliente_due"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</android.support.v7.widget.CardView>