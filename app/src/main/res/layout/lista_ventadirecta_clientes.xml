<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardViewVentaDirectaClientes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    card_view:cardBackgroundColor="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/txt_ventadir_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Card"
            android:textColor="@color/icons"/>
        <TextView
            android:id="@+id/txt_ventadir_fantasyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fantasy Name"
            android:textStyle="bold"
            android:textColor="@color/icons"
            android:layout_below="@+id/txt_ventadir_card"
            />
        <TextView
            android:id="@+id/txt_ventadir_companyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company Name"
            android:textColor="@color/icons"
            android:textStyle="bold"
            android:layout_below="@+id/txt_ventadir_fantasyname"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/txt_texto_ventadir_creditlimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CrÃ©dito:"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@color/icons"
            android:layout_below="@+id/txt_ventadir_companyname"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/txt_ventadir_creditlimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credit Limit"
            android:textColor="@color/icons"
            android:layout_alignBaseline="@+id/txt_texto_ventadir_creditlimit"
            android:layout_alignBottom="@+id/txt_texto_ventadir_creditlimit"
            android:layout_toEndOf="@+id/txt_texto_ventadir_creditlimit"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/txt_texto_ventadir_fixeddescount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descuento:"
            android:textStyle="bold"
            android:textColor="@color/icons"
            android:layout_marginStart="35dp"
            android:layout_alignBaseline="@+id/txt_ventadir_creditlimit"
            android:layout_alignBottom="@+id/txt_ventadir_creditlimit"
            android:layout_toEndOf="@+id/txt_ventadir_creditlimit" />
        <TextView
            android:id="@+id/txt_ventadir_fixeddescount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fixed descount"
            android:textColor="@color/icons"
            android:layout_marginLeft="5dp"
            android:layout_alignBaseline="@+id/txt_texto_ventadir_fixeddescount"
            android:layout_alignBottom="@+id/txt_texto_ventadir_fixeddescount"
            android:layout_toEndOf="@+id/txt_texto_ventadir_fixeddescount" />

        <TextView
            android:id="@+id/txt_texto_ventadir_due"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saldo:"
            android:textStyle="bold"
            android:textColor="@color/icons"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/txt_texto_ventadir_creditlimit"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/txt_ventadir_due"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Due"
            android:layout_marginTop="8dp"
            android:textColor="@color/icons"
            android:layout_below="@+id/txt_ventadir_creditlimit"
            android:layout_alignStart="@+id/txt_ventadir_creditlimit" />

        <TextView
            android:id="@+id/txt_texto_ventadir_credittime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T. Limite:"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:textColor="@color/icons"
            android:layout_below="@+id/txt_texto_ventadir_fixeddescount"
            android:layout_alignStart="@+id/txt_texto_ventadir_fixeddescount" />
        <TextView
            android:id="@+id/txt_ventadir_credittime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credit time"
            android:textColor="@color/icons"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/txt_ventadir_fixeddescount"
            android:layout_alignStart="@+id/txt_ventadir_fixeddescount" />
    </RelativeLayout>
</android.support.v7.widget.CardView>