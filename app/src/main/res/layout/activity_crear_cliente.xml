<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/billFrame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:layout_marginBottom="10dp"
            android:background="@color/background"
            android:padding="5dp"
            android:orientation="vertical"
>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/NuevoIdTypeCliente"
                style="@style/TextInputLayout"
                android:layout_alignParentBottom="true"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout.Dark1">

                <EditText
                    android:id="@+id/cliente_idtype_nuevo"
                    style="@style/Register_EditText2"
                    android:hint="ID Type"
                    android:nextFocusDown="@+id/cliente_card_nuevo"/>

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimary"
            android:padding="5dp"
            android:orientation="vertical"
          >

            <android.support.design.widget.TextInputLayout
                android:id="@+id/NuevoCardCliente"
                style="@style/TextInputLayout"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout.Dark1"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <EditText
                    android:id="@+id/cliente_card_nuevo"
                    style="@style/Register_EditText1"
                    android:hint="Card"
                    android:nextFocusDown="@+id/cliente_fe_nuevo"/>

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:layout_marginBottom="10dp"
            android:background="@color/background"
            android:padding="5dp"
            android:orientation="vertical"
            >

            <android.support.design.widget.TextInputLayout
                android:id="@+id/NuevoFeCliente"
                style="@style/TextInputLayout"
                android:layout_alignParentBottom="true"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout.Dark1">

                <EditText
                    android:id="@+id/cliente_fe_nuevo"
                    style="@style/Register_EditText2"
                    android:hint="Fe"
                    android:nextFocusDown="@+id/cliente_longitud_nuevo"/>

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimary"
            android:padding="5dp"
            android:orientation="vertical"
            >

            <android.support.design.widget.TextInputLayout
                android:id="@+id/NuevoLongitudCliente"
                style="@style/TextInputLayout"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout.Dark1"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <EditText
                    android:id="@+id/cliente_longitud_nuevo"
                    style="@style/Register_EditText1"
                    android:hint="Longitud"
                    android:nextFocusDown="@+id/cliente_latitud_nuevo"/>

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:layout_marginBottom="10dp"
            android:background="@color/background"
            android:padding="5dp"
            android:orientation="vertical"
            >

            <android.support.design.widget.TextInputLayout
                android:id="@+id/NuevoLatitudCliente"
                style="@style/TextInputLayout"
                android:layout_alignParentBottom="true"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout.Dark1">

                <EditText
                    android:id="@+id/cliente_latitud_nuevo"
                    style="@style/Register_EditText2"
                    android:hint="Latitud"
                    android:nextFocusDown="@+id/cliente_placa_nuevo"/>

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimary"
            android:padding="5dp"
            android:orientation="vertical"
            >

            <android.support.design.widget.TextInputLayout
                android:id="@+id/NuevoPlacaCliente"
                style="@style/TextInputLayout"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout.Dark1"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <EditText
                    android:id="@+id/cliente_placa_nuevo"
                    style="@style/Register_EditText1"
                    android:hint="Placa"
                    android:nextFocusDown="@+id/cliente_model_nuevo"/>

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:layout_marginBottom="10dp"
            android:background="@color/background"
            android:padding="5dp"
            android:orientation="vertical"
            >

            <android.support.design.widget.TextInputLayout
                android:id="@+id/NuevoModelCliente"
                style="@style/TextInputLayout"
                android:layout_alignParentBottom="true"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout.Dark1">

                <EditText
                    android:id="@+id/cliente_model_nuevo"
                    style="@style/Register_EditText2"
                    android:hint="Model"
                    android:nextFocusDown="@+id/cliente_doors_nuevo"/>

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimary"
            android:padding="5dp"
            android:orientation="vertical"
            >

            <android.support.design.widget.TextInputLayout
                android:id="@+id/NuevoDoorsCliente"
                style="@style/TextInputLayout"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout.Dark1"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <EditText
                    android:id="@+id/cliente_doors_nuevo"
                    style="@style/Register_EditText1"
                    android:hint="Doors"
                    android:nextFocusDown="@+id/cliente_name_nuevo"/>

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:layout_marginBottom="10dp"
            android:background="@color/background"
            android:padding="5dp"
            android:orientation="vertical"
            >

            <android.support.design.widget.TextInputLayout
                android:id="@+id/NuevoNameCliente"
                style="@style/TextInputLayout"
                android:layout_alignParentBottom="true"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout.Dark1">

                <EditText
                    android:id="@+id/cliente_name_nuevo"
                    style="@style/Register_EditText2"
                    android:hint="Name"
                    android:nextFocusDown="@+id/cliente_email_nuevo"/>

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimary"
            android:padding="5dp"
            android:orientation="vertical"
            >

            <android.support.design.widget.TextInputLayout
                android:id="@+id/NuevoEmailCliente"
                style="@style/TextInputLayout"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout.Dark1"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <EditText
                    android:id="@+id/cliente_email_nuevo"
                    style="@style/Register_EditText1"
                    android:hint="Email"
                    android:nextFocusDown="@+id/cliente_fantasyname_nuevo"/>

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:layout_marginBottom="10dp"
            android:background="@color/background"
            android:padding="5dp"
            android:orientation="vertical"
            >

            <android.support.design.widget.TextInputLayout
                android:id="@+id/NuevoFantasyNameCliente"
                style="@style/TextInputLayout"
                android:layout_alignParentBottom="true"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout.Dark1">

                <EditText
                    android:id="@+id/cliente_fantasyname_nuevo"
                    style="@style/Register_EditText2"
                    android:hint="Fantasy Name"
                    android:nextFocusDown="@+id/cliente_companyname_nuevo"/>

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimary"
            android:padding="5dp"
            android:orientation="vertical"
            >

            <android.support.design.widget.TextInputLayout
                android:id="@+id/NuevoCompanyNameCliente"
                style="@style/TextInputLayout"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout.Dark1"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <EditText
                    android:id="@+id/cliente_companyname_nuevo"
                    style="@style/Register_EditText1"
                    android:hint="Company Name"
                    android:nextFocusDown="@+id/cliente_phone_nuevo"/>

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:layout_marginBottom="10dp"
            android:background="@color/background"
            android:padding="5dp"
            android:orientation="vertical"
            >

            <android.support.design.widget.TextInputLayout
                android:id="@+id/NuevoPhoneCliente"
                style="@style/TextInputLayout"
                android:layout_alignParentBottom="true"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout.Dark1">

                <EditText
                    android:id="@+id/cliente_phone_nuevo"
                    style="@style/Register_EditText2"
                    android:hint="Phone"
                    android:nextFocusDown="@+id/cliente_creditlimit_nuevo"/>

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimary"
            android:padding="5dp"
            android:orientation="vertical"
            >

            <android.support.design.widget.TextInputLayout
                android:id="@+id/NuevoCreditLimitCliente"
                style="@style/TextInputLayout"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout.Dark1"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <EditText
                    android:id="@+id/cliente_creditlimit_nuevo"
                    style="@style/Register_EditText1"
                    android:hint="Credit Limit"
                    android:nextFocusDown="@+id/cliente_address_nuevo"/>

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:layout_marginBottom="10dp"
            android:background="@color/background"
            android:padding="5dp"
            android:orientation="vertical"
            >

            <android.support.design.widget.TextInputLayout
                android:id="@+id/NuevoAddressCliente"
                style="@style/TextInputLayout"
                android:layout_alignParentBottom="true"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout.Dark1">

                <EditText
                    android:id="@+id/cliente_address_nuevo"
                    style="@style/Register_EditText2"
                    android:hint="Address"
                    android:nextFocusDown="@+id/cliente_credittime_nuevo"/>

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimary"
            android:padding="5dp"
            android:orientation="vertical"
            >

            <android.support.design.widget.TextInputLayout
                android:id="@+id/NuevoCreditTimeCliente"
                style="@style/TextInputLayout"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout.Dark1"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <EditText
                    android:id="@+id/cliente_credittime_nuevo"
                    style="@style/Register_EditText1"
                    android:hint="Credit Time" />

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

        <Button
            android:id="@+id/applyInvoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/fondo_botones"
            android:text="@string/save"
            android:textColor="@color/cardview_light_background" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
