<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardViewEmailFactura"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    card_view:cardBackgroundColor="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_email_factura_numero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numero"
            android:textColor="@color/icons"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txt_email_factura_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txt_email_factura_numero"
            android:layout_marginTop="10dp"
            android:text="Fecha"
            android:textColor="@color/icons" />


        <TextView
            android:id="@+id/txt_email_factura_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Total"
            android:textColor="@color/icons"

            android:textStyle="bold"
            android:layout_below="@+id/txt_email_factura_fecha"
            android:layout_alignParentStart="true" />



        <ImageButton
            android:id="@+id/btnReenviarFactura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@null"
            card_view:srcCompat="@mipmap/ic_email" />


    </RelativeLayout>
</android.support.v7.widget.CardView>