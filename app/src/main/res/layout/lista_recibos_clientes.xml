<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardViewRecibosClientes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    card_view:cardBackgroundColor="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/txt_cliente_factura_cardRecibos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Card"
            android:textColor="@color/icons"/>
        <TextView
            android:id="@+id/txt_cliente_factura_fantasynameRecibos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fantasy Name"
            android:textStyle="bold"
            android:textColor="@color/icons"
            android:layout_below="@+id/txt_cliente_factura_cardRecibos"
            />
        <TextView
            android:id="@+id/txt_cliente_factura_companynameRecibos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company Name"
            android:textColor="@color/icons"
            android:textStyle="bold"
            android:layout_below="@+id/txt_cliente_factura_fantasynameRecibos"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/txt_cliente_factura_numeracionRecibos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numeracion"
            android:textColor="@color/icons"
            android:layout_below="@+id/txt_cliente_factura_companynameRecibos"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Devolver"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/btnDevolverFacturaClienteRecibos"
            android:background="@color/colorPrimary"
            android:textAlignment="center"
            android:capitalize="none"
            android:textColor="@color/cardview_light_background"
            android:layout_marginRight="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="13dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/btnImprimirFacturaClienteRecibos" />


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_print"
            android:id="@+id/btnImprimirFacturaClienteRecibos"
            android:background="@null"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/btnUbicacionFacturaClienteRecibos" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_ubicacion"
            android:id="@+id/btnUbicacionFacturaClienteRecibos"
            android:background="@null"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</android.support.v7.widget.CardView>