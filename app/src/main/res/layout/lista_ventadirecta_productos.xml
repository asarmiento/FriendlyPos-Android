<androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/cardViewSeleccionarProductosVentaDirecta"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    card_view:cardBackgroundColor="#FFF"
    app:ignore="NamespaceTypo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/txt_ventadir_producto_factura_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Nombre"
            android:fontFamily="@font/monse"
            app:fontFamily="@font/monse"
            android:textColor="#58595b"
            android:textSize="12sp"/>


        <TextView
            android:id="@+id/txt_ventadir_producto_factura_marca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marca"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/monse"
            app:fontFamily="@font/monse"
            android:textColor="#58595b"
            android:textSize="12sp"
            android:layout_below="@+id/txt_ventadir_producto_factura_nombre"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/txt_ventadir_producto_factura_tipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo"
            android:fontFamily="@font/monse"
            app:fontFamily="@font/monse"
            android:textColor="#58595b"
            android:textSize="12sp"
            android:layout_below="@+id/txt_ventadir_producto_factura_marca"
            android:layout_alignStart="@+id/txt_ventadir_producto_factura_marca" />

        <TextView
            android:id="@+id/txt_ventadir_producto_factura_precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Precio"
            android:gravity="right"
            android:fontFamily="@font/monse"
            app:fontFamily="@font/monse"
            android:textColor="#58595b"
            android:textSize="12sp"
            android:layout_below="@+id/txt_ventadir_producto_factura_tipo"
            android:layout_alignParentEnd="true" />


        <TextView
            android:id="@+id/txt_ventadir_producto_factura_disponible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disponible"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/monse"
            app:fontFamily="@font/monse"
            android:textColor="#58595b"
            android:textSize="12sp"
            android:layout_below="@+id/txt_ventadir_producto_factura_precio"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/txt_ventadir_producto_factura_seleccionado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionado"
            android:fontFamily="@font/monse"
            app:fontFamily="@font/monse"
            android:textColor="#58595b"
            android:textSize="12sp"
            android:layout_alignBaseline="@+id/txt_ventadir_producto_factura_disponible"
            android:layout_alignBottom="@+id/txt_ventadir_producto_factura_disponible"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>