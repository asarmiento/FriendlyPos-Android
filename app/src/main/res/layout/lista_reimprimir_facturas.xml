<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardViewReimprimirFactura"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    card_view:cardBackgroundColor="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_reimprimir_factura_numeracion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numeracion"
            android:textColor="@color/icons"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_reimprimir_factura_fechahora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_reimprimir_factura_numeracion"
            android:text="Fecha Hora"
            android:textColor="@color/icons" />

        <TextView
            android:id="@+id/txt_reimprimir_factura_fantasyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txt_reimprimir_factura_fechahora"
            android:text="Fantasy Name"
            android:textColor="@color/icons" />

        <TextView
            android:id="@+id/txt_reimprimir_factura_anombrede"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txt_reimprimir_factura_fantasyname"
            android:text="A nombre de"
            android:textColor="@color/icons" />

        <TextView
            android:id="@+id/txt_reimprimir_factura_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/txt_reimprimir_factura_anombrede"
            android:gravity="right"
            android:text="Total"
            android:textColor="@color/icons"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_reimprimir_factura_cantidad"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/colorPrimaryDark"
            android:text="20"
            android:textAlignment="center"
            android:textColor="@color/cardview_light_background"
            android:layout_alignBottom="@+id/txt_reimprimir_factura_fantasyname"
            android:layout_alignStart="@+id/txt_reimprimir_factura_total"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/txtSubida"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimaryDark"
           />

    </RelativeLayout>
</android.support.v7.widget.CardView>