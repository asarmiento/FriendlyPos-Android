<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardViewClientes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    card_view:cardBackgroundColor="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_cliente_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card"
            android:textColor="@color/icons"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_cliente_fantasyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_cliente_card"
            android:text="Fantasy Name"
            android:textColor="@color/icons"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_cliente_companyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txt_cliente_fantasyname"
            android:text="Company Name"
            android:textColor="@color/icons"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_cliente_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txt_cliente_companyname"
            android:text="Address"
            android:textColor="@color/icons" />

        <TextView
            android:id="@+id/txt_texto_cliente_telefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txt_cliente_address"
            android:text="TelÃ©fono:"
            android:textColor="@color/icons"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_cliente_telefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txt_texto_cliente_telefono"
            android:layout_alignBottom="@+id/txt_texto_cliente_telefono"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/txt_texto_cliente_telefono"
            android:text="Telefono"
            android:textColor="@color/icons" />

    </RelativeLayout>
</android.support.v7.widget.CardView>