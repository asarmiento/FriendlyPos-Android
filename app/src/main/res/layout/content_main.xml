<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.friendlypos.principal.activity.MenuPrincipal"
    tools:showIn="@layout/app_bar_main"
    android:background="@android:color/white">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frame">

    <ImageView
        android:id="@+id/image_logoContenedor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/logo_contenedor"
        android:layout_gravity="center"/>



</FrameLayout>


    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        fab:menu_fab_size="normal"
        fab:menu_showShadow="true"
        fab:menu_shadowColor="#58595b"
        fab:menu_shadowRadius="4dp"
        fab:menu_shadowXOffset="1dp"
        fab:menu_shadowYOffset="3dp"
        fab:menu_colorNormal="@color/morado"
        fab:menu_colorPressed="@color/colorPrimaryDark"
        fab:menu_colorRipple="@color/colorAccent"
        fab:menu_animationDelayPerItem="50"
        fab:menu_icon="@mipmap/ic_menu"
        fab:menu_buttonSpacing="0dp"
        fab:menu_labels_margin="0dp"
        fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
        fab:menu_labels_paddingTop="4dp"
        fab:menu_labels_paddingRight="8dp"
        fab:menu_labels_paddingBottom="4dp"
        fab:menu_labels_paddingLeft="8dp"
        fab:menu_labels_padding="8dp"
        fab:menu_labels_textColor="#FFFFFF"
        fab:menu_labels_textSize="14sp"
        fab:menu_labels_cornerRadius="3dp"
        fab:menu_labels_colorNormal="#333333"
        fab:menu_labels_colorPressed="#444444"
        fab:menu_labels_colorRipple="#66FFFFFF"
        fab:menu_labels_showShadow="true"
        fab:menu_labels_singleLine="false"
        fab:menu_labels_ellipsize="none"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_position="left"
        fab:menu_openDirection="up"
        fab:menu_backgroundColor="@android:color/transparent"
        fab:menu_fab_label="¿Qué quiere hacer?"
        fab:menu_fab_show_animation="@anim/hide_to_bottom"
        fab:menu_fab_hide_animation="@anim/scale_up"
        app:layout_anchor="@id/viewpager"
        app:layout_anchorGravity="bottom|right|end"
        tools:ignore="NotSibling">

        <com.github.clans.fab.FloatingActionButton
            style="@style/MenuButtonsSmallRed"
            android:id="@+id/nav_distribucion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_direcsale_nav"
            fab:fab_size="normal"
            fab:fab_label="Distribución" />

        <com.github.clans.fab.FloatingActionButton
            style="@style/MenuButtonsSmallRed"
            android:id="@+id/nav_ventadirecta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_ventadirecta_nav"
            fab:fab_size="normal"
            fab:fab_label="Venta Directa" />

        <com.github.clans.fab.FloatingActionButton
            style="@style/MenuButtonsSmallRed"
            android:id="@+id/nav_preventa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_preventa_nav"
            fab:fab_size="normal"
            fab:fab_label="Preventa" />

        <com.github.clans.fab.FloatingActionButton
            style="@style/MenuButtonsSmallRed"
            android:id="@+id/nav_recibos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_recibos_nav"
            fab:fab_size="normal"
            fab:fab_label="Recibos" />

        <com.github.clans.fab.FloatingActionButton
            style="@style/MenuButtonsSmallRed"
            android:id="@+id/nav_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_recibos_nav"
            fab:fab_size="normal"
            fab:fab_label="Reenviar Email" />

    </com.github.clans.fab.FloatingActionMenu>
</RelativeLayout>
